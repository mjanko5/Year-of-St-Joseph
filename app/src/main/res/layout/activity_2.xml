<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_2_Layout"
    tools:context=".Activity2">

    <ImageView
        android:id="@+id/picture_2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/joseph_1" />

    <TextView
        android:id="@+id/devotion_2"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Title"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/picture_2"
        app:layout_constraintTop_toTopOf="@+id/picture_2" />

    <TextView
        android:id="@+id/description_2"
        android:layout_width="202dp"
        android:layout_height="51dp"
        android:text="Description"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/picture_2"
        app:layout_constraintStart_toStartOf="@+id/devotion_2"
        app:layout_constraintTop_toBottomOf="@+id/devotion_2" />

    <TextView
        android:id="@+id/content_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="4sp"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:text="Content"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/picture_2"
        app:layout_constraintTop_toBottomOf="@+id/picture_2" />
</androidx.constraintlayout.widget.ConstraintLayout>